@model List<Football.Models.TeamData>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title style="color: blue;">Lista de Equipos</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f0f0f0;">
    <div class="container" style="margin-top: 20px;">
        <h1 class="text-center" style="color: green;">Lista de Equipos</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Codigo</th>
                    <th>País</th>
                    <th>Fundado</th>
                    <th>Nacional</th>
                    <th>Logo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model)
                {
                    <tr>
                        <td>@team.Team.name</td>
                        <td>@team.Team.code</td>
                        <td>@team.Team.country</td>
                        <td>@team.Team.founded</td>
                        <td>@team.Team.national</td>
                        <td>@team.Team.logo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
